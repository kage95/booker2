<div class="container px-5 mb-5">
  <div class="row">
<!--////////////////////////////////////////////////////////////////////-->
    <div class="col-3">
      <h1>User info</h1>
      <%= image_tag @user.get_profile_image("63x63")%>
      <table class="table">
        <tbody>
          <tr>
            <th>name</th>
            <th><%= @user.name %></th>
          </tr>
          <tr>
            <th>introduction</th>
            <th><%= @user.introduction%></th>
          </tr>
          
        </tbody>
      </table>
      <div>
        <%= link_to edit_user_path(@user.id),class:"btn btn-outline-secondary btn-block" do%>
          <i class="fas fa-user-cog"></i>
        <%end%>
      </div>
      
      <h1 class="mt-3">New book</h1>
      <%= form_with model:@book,url:books_path,local:true do |f| %>
        <div class="field form-group">
          <%=f.label :Title%><br/>
          <%=f.text_field :title,autofocus:true,class:"form-control"%>
        </div>
        
        <div class="field form-group">
          <%=f.label :Opinion%><br/>
          <%=f.text_field :body,autofocus:true,class:"form-control"%>
        </div>
        
        <div class="actions">
          <%= f.submit "Create Book",class:"btn btn-success"%>
        </div>
      <%end%>
      
    </div>

    
<!--////////////////////////////////////////////////////////////////////-->
    <div class="col-8 offset-md-1">
      <h1>Books detail</h1>
      <table class="table">
        <thead>
          <tr>
            <th></th>
            <th>Title</th>
            <th>Opinion</th>
            <th colspan="3"></th>
          </tr>
        </thead>
        <% @books.each do |book|%>
        <tbody>
          <td>
            <%=link_to user_path do %>
            <%= image_tag book.user.get_profile_image("40x40")%>
            <%end%>
          </td>
          <td><%= link_to book.title,book_path%></td>
          <td><%=book.body%></td>
        </tbody>
        <% end%>
      </table>
    </div>
    
  </div>
</div>