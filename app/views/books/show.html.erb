<div class="container px-5 mb-5">
  <div class="row">
<!--////////////////////////////////////////////////////////////////////-->
    <%= render 'users/info', user: @user %>
    
<!--////////////////////////////////////////////////////////////////////-->
    <div class="col-md-8 offset-md-1">
      <h1>Book detail</h1>
      <table class="table">
        <thead>
          <tr>
            <th></th>
            <th>Title</th>
            <th>Opinion</th>
            <th colspan="3"></th>
          </tr>
        </thead>
        <tbody>
          <td>
          <%=link_to user_path(@book.user.id) do %>
            <%= image_tag @book.user.get_profile_image("50x50")%></br>
            <%= @book.user.name%>
          <%end%>
          </td>
          <td><%= link_to @book.title,book_path%></td>
          <td><%=@book.body%></td>
          <% if @book.user.id == current_user.id %>

            <td><%= link_to "Edit",edit_book_path,class:"btn btn-success btn-sm" %></td>
            <td><%= link_to "Destroy",book_path,class:"btn btn-danger btn-sm",method: :delete,"data-confirm"=>"本当に削除しますか？" %></td>

          <% end%>
        </tbody>
      </table>
    </div>
    
  </div>
</div>