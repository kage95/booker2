 <% if @book.errors.any?%>
      <p><%= @book.errors.count %>件のerrorがあります。</p>
      <ul>
          <% @book.errors.full_messages.each do |message|%>
            <li>
              <%= message %>
            </li>
          <%end%>
      </ul>
    <%end%>

<div class="container">
  <div class="row">
  
    
    <div class="col-sm-12 col-lg-5 px-sm-0 mx-auto">
      <h1>Editing Book</h1>
      
      <%= form_with model: @book,url:book_path,local:true do |f|%>
        <div class="field form-group">
          <label for="input_title">Title</label></br>
          <%= f.text_field :title,autofocus:true,id:"input_title",placeholder:"title",class:"form-control"%>
        </div>
        
        <div class="field form-group">
          <label for="input_opinion">Opinion</label></br>
          <%= f.text_field :body,autofocus:true,id:"input_opinion",placeholder:"opinion",class:"form-control"%>
        </div>
        
        <div class="actions">
          <%= f.submit "Update Book",class:"btn btn-success"%>
        </div>
      <%end%>
      
      <div class="mt-3">
        <%= link_to "Show",book_path(@book.id)%>
        |
        <%= link_to "Back",books_path%>
      </div>
    </div>
  </div>
</div>



